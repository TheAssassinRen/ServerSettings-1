<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
  <!-- Google Fonts -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
  <!-- Bootstrap core CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet">
  <!-- Material Design Bootstrap -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.0/css/mdb.min.css" rel="stylesheet">
  <!-- JQuery -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <!-- Bootstrap tooltips -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
  <!-- Bootstrap core JavaScript -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>
  <!-- MDB core JavaScript -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.0/js/mdb.min.js"></script>
  <title>Settings.</title>
</head>
<body>
  <div class="edge-header tempting-azure-gradient"></div>
  <div class="mb-5 container free-bird text-white">
    <% if (data) { %>
      <form action="/" method="get">
        <input type="hidden" name="uid" value="<%= uid %>">
        <input type="hidden" name="submit" value="✔">
        <% Object.keys(data).slice(1).forEach((k) => { %>
          <div class="card text-dark hoverable">
            <div class="card-body">
              <div class="card-title">
                <%= settings.roles.find((v) => v.id === k).name %>
              </div>
              <div class="card-text">
                <%- settings.roles.find((v) => v.id === k).desc.split('\n').join('<br />') %>
              </div>
              <div class="custom-control custom-switch">
                <input type="checkbox" class="custom-control-input" id="<%= k %>" name="<%= k %>" <%- data[k] ? 'checked' : '' %>>
                <label class="custom-control-label" for="<%= k %>"></label>
              </div>
            </div>
          </div>
        <% }) %>
        <button class="btn btn-primary" onclick="alert('적용됨')" type="submit">적용(로그아웃)</button>
      </form>
    <% } else { %>
      <h1 class="display-4">
        Settings.
      </h1>
      <a class="btn btn-primary" href="https://discord.com/api/oauth2/authorize?client_id=580746584338464769&redirect_uri=<%= encodeURI(settings.oauth.redirectUri) %>&response_type=code&scope=identify">로그인</a>
    <% } %>
    </div>
</body>
</html>
